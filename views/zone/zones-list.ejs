<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', {TITLE: 'zones list' }) %>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap.min.css">
</head>

<body class="layout layout-header-fixed">
    <div class="layout-header">
        <%- include('../partials/navbar', {TITLE: 'zones list'}) %>
    </div>
    <div class="layout-main">
        <%- include('../partials/sidebar') %>
        <div class="layout-content">
            <div class="layout-content-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <strong>zones list</strong>
                                </div>
                                <div class="card-body">
                                    <table id="zones-table" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>name </th>
                                                <th>status </th>
                                                <th>remove </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% zones.forEach(zone => { %>
                                                <tr>
                                                    <td><%= zone.name %> </td>
                                                    <td><%= zone.isActive ? 'active' : 'deactivate' %> </td>
                                                    <td>
                                                        <a href= <%= `/backOffice/v1/zone/delete/${zone.id}` %> >
                                                            <span class="icon icon-remove"></span>
                                                        </a>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                      </table>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
        <%- include('../partials/footer') %>
    </div>

    <%- include('../partials/scripts') %>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
    <script>

        $("#zones-table").dataTable({
            columnDefs: [{}, { width: '5%', targets: 2,  orderable: false }],
        });
    </script>
</body>

</html>
